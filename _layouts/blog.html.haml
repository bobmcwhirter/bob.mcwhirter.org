---
layout: base
---

.post_navigation
  - if page.previous_post
    .previous_post.link
      Previous: 
      %a{:href=>page.previous_post.url}
        = page.previous_post.title
  - if page.next_post
    .next_post.link
      Next: 
      %a{:href=>page.next_post.url}
        = page.next_post.title
  .clearfix
.post
  %h2
    = page.title
  %h3
    = page.date.strftime( '%d %B %Y' )
  %h4
    - for tag in page.tags
      - unless tag.nil?
        %a{:href=>tag.primary_page.url}
          = tag
  .content
    ~page.content
  .comments
    = page.intense_debate_comments
